<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title> <%= title %> </title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

    <style type="text/css">
      body {
        margin: 15px;
        padding: 15px;
      }

      table {
        padding: 0px;
        margin: 0px;
        font-size: 60%;
      }

      .table-fit {
        margin-left: 7.5%;
        width: 60%;
      }

      hr {
        /* height: 0px; */
        border: none;
        border-top: 3px solid black;
        margin-left: 0px;
        width: 78%;
      }

      .clearFloat {
        float: none;
      }

      h3 {
        margin-top: 10px;
        width: 100%;
      }

    </style>
  </head>
  <!-- HTML + JavaScript = ejs -->
  <body>
    <h1><b><%= title %></b></h1>
    <hr>
    <br />
    <div class="clearFloat"></div>
    <h3>User: <%= username %></h3>
    <% if(makeTable) {%>
    <table class="table table-striped table-fit">
      <thead>
        <tr>
          <% for(var i = 0; i < headers.length; i++){ %>
            <th> <%= ""+headers[i] %> </th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < content.length; i++){ %>
        <tr>
          <% for(var j = 0; j < content[i].length; j++){ %>
            <td> <%= ""+content[i][j] %> </td>
          <% } %>
        </tr>
        <% } %>
      </tbody>
    </table>
    <% } else { %>
      <% for(var i = 0; i < content.length; i++){ %>
        <p> <%= ""+content[i] %> </p>
      <% } %>
    <% } %>


  </body>
</html>
